<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <li>
    <%= link_to 'Posts', posts_path %>
  </li>

  <div class="btn-group">
    <a class="btn btn-default"><i class="icon-tag"></i> Categories</a>
    <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li><%= link_to 'All Categories', categories_path %></li>
      <li role="separator" class="divider"></li>
      <li><%= link_to '<i class="icon-plus"></i> Add Category'.html_safe, new_category_path %></li>
    </ul>
  </div>

  <% if logged_in? %>
    <!--User can add new post-->
    <div class="btn-group">
      <%= link_to "New post", new_post_path, :class=>"btn btn-success" %>
    </div>
    <!--User can view his/her profile -->
    <div class="btn-group">
      <a class="btn btn-default"><i class="icon-user"></i> <%= current_user.username %></a>
      <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><%= link_to '<i class="icon-pencil"></i> Edit profile'.html_safe, edit_user_path(current_user) %></li>
        <li><%= link_to '<i class="icon-eye-open"></i> View profile'.html_safe, user_path(current_user) %></li>
        <li role="separator" class="divider"></li>
        <li><%= link_to '<i class="icon-remove"></i> Log out'.html_safe, logout_path %></li>
      </ul>
    </div>

  <% else #logged out %> 
    <li>
      <%= link_to "Sign up", sign_up_path %>
    </li>
    <li>
      <%= link_to "Log in", login_path %>
    </li>
  <% end %>
</ul>
