<p class="pull-right"><%= link_to "See all posts", posts_path %></p>
<%= render "shared/content_title", title: "#{@post.title}" %>	

<div class="span8 well">
	<p> <%= @post.description %></p>
  <p>Source: <%= link_to @post.url, fix_url(@post.url) %></p>
  <p><%= link_to "Edit", edit_post_path, :class=>"btn btn-primary" %></p>
	<hr>
</div>

<div class="span8 well">
	<h5> Leave Comment </h5>
	<%= form_for [@post, @comment] do |f| %>
		<%= render 'shared/error', obj: @comment %>
		<%= f.text_area :body, :class=>"span7", size:"3x3" %>
		<p><%= f.submit "Send", :class=>"btn btn-primary" %></p>
	<% end %>
	<hr>
</div>

<div class="span8 well">
	<h5> Comments </h5>
	<% @post.comments.each do |comment| %>
		<p><%= comment.body %></p><hr>
	<% end %>
</div>